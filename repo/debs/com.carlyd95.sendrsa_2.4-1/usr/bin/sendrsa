#!/bin/bash
mkdir -p ~/.ssh
if [ "$1" == "-help" ]
then
echo 'Usage: "sendrsa USERNAME@IP.ADD.RE.SS"'
echo "Before you use please generate RSA keys by running ssh-keygen and hit return each time."
elif [ -f ~/.ssh/id_rsa.pub ];
then
    if [ "$1" == "" ]
    then
    echo "Usage: sendrsa [-option]\n\noptions;\n-help\t\texplains how to use sendrsa\n("User"@"IP Address")\t\tsends RSA keys to "User@IPAdress"\n"
    exit
    else
    cat ~/.ssh/id_rsa.pub |  ssh $1 'cat >> ~/.ssh/authorized_keys' && echo "RSA sent to $1!"
    fi
else
echo "Uh oh, it appears $USER has no RSA keys! please run ssh-keygen, then try again!"
exit
fi